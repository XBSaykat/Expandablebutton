<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/videolayout"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_ondemand_video_24"
                    android:transitionName="img"
                    tools:ignore="UnusedAttribute" />
            </RelativeLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:lines="2"
                    android:gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:text="Video 1_2"
                    android:textColor="#111111"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/documentlayout"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgdoc"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_file_copy_24"
                android:transitionName="img"
                tools:ignore="UnusedAttribute" />
        </RelativeLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/titledoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:lines="2"
                android:gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:text="Document"
                android:textColor="#111111"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/authordoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:lines="2"
                android:gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:text="I am Author"
                android:textColor="#111111"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>